{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "osx": {
        "command": "bash",
        "args": ["-c"],
        "options": {
            "cwd": "${workspaceRoot}/Strump"
        },
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "label": "debug",
            "args": [
                "make"
            ],
            "group": {
                "kind":"build",
                "isDefault":true 
            }
        },
        {
            "label": "clean",
            "args": [
                "make clean"
            ],
            "group": "build"
        },
        {
            "label": "log",
            "args": [
                "make log"
            ],
            "group": "build"
        },
        {
            "label": "release",
            "args": [
                "make release"
            ],
            "group": "build"
        }
    ]
}